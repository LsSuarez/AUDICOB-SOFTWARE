@model PROYECTO_AUDICOB.ViewModels.BuscarClienteViewModel
@{
    Layout = null;
    ViewData["Title"] = "Buscar Cliente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap básico -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    <!-- CSS embebido -->
    <style>
        body {
            background: linear-gradient(135deg, #e3f2fd, #bbdefb);
            font-family: Arial, sans-serif;
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            font-weight: bold;
            font-size: 1.3rem;
        }

        .btn-primary {
            background-color: #1565c0;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0d47a1;
        }

        h4.text-primary {
            color: #1565c0 !important;
            margin-top: 20px;
        }

        table {
            background-color: white;
        }

        thead.table-primary {
            background-color: #1565c0;
            color: white;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #90caf9 !important;
        }

        .text-danger {
            font-weight: bold;
        }

        .historial {
            max-width: 200px;
            word-wrap: break-word;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Buscar" method="post">
                        <div class="input-group mb-3">
                            <input asp-for="Dni" class="form-control form-control-lg" placeholder="Ingrese DNI del cliente" />
                            <button type="submit" class="btn btn-primary btn-lg">Buscar</button>
                        </div>
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.NombreCliente))
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        Datos del Cliente
                    </div>
                    <div class="card-body">
                        <p><strong>Nombre:</strong> @Model.NombreCliente</p>
                        <p><strong>Teléfono:</strong> @Model.Telefono</p>
                    </div>
                </div>

                <h4 class="text-center text-primary mt-4">Evaluaciones</h4>

                @if (Model.Evaluaciones != null && Model.Evaluaciones.Any())
                {
                    <div class="table-responsive shadow-sm">
                        <table class="table table-bordered table-hover text-center align-middle">
                            <thead class="table-primary">
                                <tr>
                                    <th>Ingresos</th>
                                    <th>Deudas</th>
                                    <th>Estado</th>
                                    <th>Comentario</th>
                                    <th>Usuario Responsable</th>
                                    <th>Historial Pagos</th>
                                    <th>Fecha Registro</th>
                                    <th>Fecha Revisión</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eval in Model.Evaluaciones)
                                {
                                    <tr>
                                        <td>@eval.Ingresos</td>
                                        <td>@eval.Deudas</td>
                                        <td>@eval.Estado</td>
                                        <td>@eval.Comentario</td>
                                        <td>@eval.UsuarioResponsableId</td>
                                        <td class="historial">@eval.HistorialPagosJson</td>
                                        <td>@eval.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                        <td>@(eval.FechaRevision.HasValue ? eval.FechaRevision.Value.ToString("dd/MM/yyyy") : "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted">No se encontraron evaluaciones para este cliente.</p>
                }
            </div>
        </div>
    }

    @if (!ViewData.ModelState.IsValid || (Model.Dni != null && string.IsNullOrEmpty(Model.NombreCliente)))
    {
        <p class="text-center text-danger mt-3">Cliente no encontrado.</p>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
